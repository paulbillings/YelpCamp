<% include ../partials/header %>

    <div class="container profile-div">
        <div class="row">
            <div class="col-md-12">
                <h1><%= user.username %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                     <img src="<%= user.avatar %>" alt="user profile image">
                </div>
            </div>
            <div class="col-md-4">
                <table>
                    <tr>
                        <td>Name: </td>
                        <td><%= user.firstName + " " + user.lastName %></td>
                    </tr>
                    <tr>
                        <td>City: </td>
                        <td><%= user.city %></td>
                    </tr>
                    <tr>
                        <td>Email: </td>
                        <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h4>Campgrounds created:</h4> 
                    <ul>
                        <% campgrounds.forEach(function(campground){ %>
                            <li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
                        <% }); %>  
                    </ul>
            </div>
        </div>
    </div>
    <a class="btn btn-sm btn-info backButton" href="/campgrounds">Go Back</a>

<% include ../partials/footer %>