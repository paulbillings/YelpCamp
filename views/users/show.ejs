<% include ../partials/header %>

    <div class="container profile-div">
        <div class="row">
            <div class="col-md-12">
                <h1><%= user.username %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                     <img src="<%= user.avatar %>" alt="user profile image">
                </div>
            </div>
            <div class="col-md-4">
                <h4>Name: <%= user.firstName + " " + user.lastName %></h4>
                <h4>City: <%= user.city %></h4>
                <h4>Email: <a href="mailto:<%= user.email %>"><%= user.email %></a></h4>
            </div>
            <div class="col-md-4">
                <h4>Campgrounds created:</h4> 
                    <ul>
                        <% campgrounds.forEach(function(campground){ %>
                            <li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
                        <% }); %>  
                    </ul>
            </div>
        </div>
    </div>

<% include ../partials/footer %>